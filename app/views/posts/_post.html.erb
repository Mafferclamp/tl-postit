<div class="row">
	<% if logged_in? %>
		<div class="span0 text-center">
			<%= link_to vote_post_path(post, vote: true),method: 'post' do %>
				<i class="icon-arrow-up"></i>
			<%end%>
				<br/>
					<%= "#{post.vote_total}" %>
					<%= "votes" %>
				<br/>
				<%= link_to vote_post_path(post, vote: false),method: 'post' do %>
					<i class="icon-arrow-down"></i>
				<%end%>
		</div>
	<% else %>
		<div class="span0 text-center">
			<%= post.vote_total %>
			<%= "votes" %>
		</div>
	<%end%>
	<div class="span8 ">
		<p ><%= link_to post.title, fix_url(post.url) %> 
			<%= render post.categories %>
			<% if logged_in? %>
			<%= link_to 'Edit', edit_post_path(post), class: "pull-right" %>
			<% end %>
		<p> <%= post.description %>
		<p>
			<span class="quiet">posted by </span><%= link_to post.user.username, user_path(post.user.id) %>
			<small><%= fix_date(post.created_at) %></small>
		</p>
		<small>
			<%= link_to("#{post.comments.size} comments", post_path(post)) %>
		</small>
		<hr/>
	</div>
</div>