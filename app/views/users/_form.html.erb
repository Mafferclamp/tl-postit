<div class="well">
	<%= form_for @user do |f|%>
		<%= render 'shared/error', obj: @user %>
		<div class='control-group'>
			<br/>
			<%= f.label :username %>
			<%= f.text_field :username %>
		</div>
		<div class='control-group'>	
			<%= f.label :password %>
			<%= f.password_field :password %>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
		</div>
		<br/>
		
		<%= f.submit class: "btn btn-primary"%>
	<% end %>
</div>