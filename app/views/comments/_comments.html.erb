<% show_post ||= false %>
<div class="row">
<% if logged_in? %>
 	<div class="span0 text-center well	">
		<%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
			<i class="icon-arrow-up"></i>
		<%end%>
		<br/>
		<%=  comment.vote_total %>
		<br/>
		<%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
			<i class="icon-arrow-down"></i>
		<%end%>
	</div>
<%elsif %>
  <div class="span0 text-center well  ">
      <%= comment.vote_total %>
      <%= "votes" %>
    </div>
<%end%>
 	<div class="well span9">
 		<em><%= comment.body %> </em>
 		<% if show_post %>
 			on <%= link_to comment.post.title, post_path(comment.post) %>
 		<% end %>
 		<br/>
 		<span class="quiet">by </span><%=link_to comment.user.username, user_path(comment.user) %>
		<small><%= fix_date(comment.created_at) %></small>
 	</div>
</div>
	