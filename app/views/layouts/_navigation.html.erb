<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>
<% if logged_in? %>
<div class="nav_item">
	<%= link_to(new_post_path) do %>
		<button class="btn btn-success">
			<i class="icon-plus icon-white"></i>
				New Post
		</button>
	<%end %>
</div>
<%end %>

<div class="btn-group nav_item">
	<%= link_to "#", class: 'btn dropdown-toggle', 'data-toggle' => 'dropdown' do %>
		Categories <span class="caret"></span>
	<% end %>
	<ul class="dropdown-menu">
		<% Category.all.each do |category| %>
			<li><%= link_to category.name, category_path(category)  %></li>
		<%end%>
		<%if logged_in? %>
		<li class="divider"></li>
		<li>
			<%=link_to(new_category_path) do %>
				<i class="icon-plus"></i>
				New Category
			<%end %>
		</li>
		<%end%>
	</ul>
</div>
<!-- Will appear if you are logged in -->
<% if logged_in? %>
	<div class="nav_item ">
		<%= link_to(logout_path) do %>
			<button class="btn btn-default">
				<i class="icon-user"></i>
					Logout
			</button>
		<%end %>
	</div>
		<div class="nav_item ">
	
			<button class="btn btn-default">
				<i class="icon-user"></i>
				<%= current_user.username %>
			</button>

	</div>

<!-- Will appear if you are not logged in -->	
<% else %>
	<div class="nav_item ">
		<%= link_to(login_path) do %>
			<button class="btn btn-primary">
				<i class="icon-user icon-white"></i>
					Login
			</button>
		<%end %>
	</div>


	<div class="nav_item ">
		<%= link_to(register_path) do %>
			<button class="btn btn-default">
				<i class="icon-user "></i>
					Register
			</button>
		<%end %>
	</div>
<%end %>