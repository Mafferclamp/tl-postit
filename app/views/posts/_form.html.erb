	<div class="well row">
		<div class="form span8">
			<%= form_for @post do |f| %>

				<%= f.label :title %>
				<%= f.text_field :title %>

				<%= f.label :url %>
				<%= f.text_field :url %>

				<%= f.label :description %>
				<%= f.text_area :description, rows: 5 %>

				<br/>
				<%= f.collection_select(:categories, Category.all, :id, :name) %>
				<select multiple="multiple" name="categories[]">
					<% @categories.each do |cat| %>
						<option value="<%=cat.id%>"><%= cat.name %></option>
					<% end %>
				</select>
				<br/>
				<%= f.submit  class: "btn btn-default" %>
			<% end %>
		</div>
			<%= render 'shared/error', obj: @post %>
	</div>
		


</div>
