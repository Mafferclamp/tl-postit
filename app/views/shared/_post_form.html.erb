	<div class="well row">
		<div class="form span4">
			<%= form_for @post do |f| %>

				<%= f.label :title %>
				<%= f.text_field :title %>

				<%= f.label :url %>
				<%= f.text_field :url %>

				<%= f.label :description %>
				<%= f.text_area :description, rows: 5 %>
				<br/>
				<%= f.submit  class: "btn btn-default" %>
			<% end %>
		</div>
		<div class="error span4">
			<% if @post.errors.any? %>
			<div class='alert alert-error span4'>
				<h5>Please fix the following errors:</h5>
					<ul>
						<% @post.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<%end%>
					</ul>
			</div>
	<% end %>
		</div>
	</div>
</div>